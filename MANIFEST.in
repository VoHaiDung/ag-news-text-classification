# MANIFEST.in - Package data specification
# =========================================
#
# Specifies additional files to include in package distribution
# Following Python Packaging Authority guidelines
#
# Author: Võ Hải Dũng

# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include CODE_OF_CONDUCT.md

# Include requirements
recursive-include requirements *.txt

# Include configuration files
include setup.cfg
include pyproject.toml
include .flake8
include .pre-commit-config.yaml
include .gitignore
include .env.example

# Include source code
recursive-include src *.py *.pyi py.typed

# Include configs
recursive-include configs *.yaml *.yml *.json *.py

# Include scripts
recursive-include scripts *.py *.sh

# Include tests
recursive-include tests *.py *.yaml *.json

# Include notebooks
recursive-include notebooks *.ipynb

# Include documentation source
recursive-include docs *.rst *.md *.txt Makefile

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude .git*
global-exclude .venv
global-exclude venv
global-exclude build
global-exclude dist
global-exclude *.egg-info
global-exclude .coverage
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .tox
global-exclude outputs
global-exclude data
global-exclude *.log
