# Flake8 Configuration
# ====================
# Simple linting configuration
# Author: Võ Hải Dũng

[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    venv,
    build,
    dist,
    *.egg-info,
    data,
    outputs

ignore = 
    E203,
    W503,
    E501

per-file-ignores =
    __init__.py:F401
