# Environment Variables Example
# =============================
# Copy to .env and fill in values
# Author: Võ Hải Dũng

# Project settings
PROJECT_NAME="AG News Classification"
ENVIRONMENT="development"
DEBUG=True

# Paths
DATA_DIR="./data"
OUTPUT_DIR="./outputs"
MODEL_DIR="./models"
LOG_DIR="./logs"

# Model settings
MODEL_NAME="bert-base-uncased"
MAX_LENGTH=256
BATCH_SIZE=32
LEARNING_RATE=2e-5
NUM_EPOCHS=3

# API Keys (optional)
WANDB_API_KEY=""
OPENAI_API_KEY=""
HF_TOKEN=""

# Random seed
SEED=42

# Device
CUDA_VISIBLE_DEVICES="0"
